<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>perfil-1</title>
    <link rel="stylesheet" href="css/edite-seu-perfil-psic.css">
</head>
<body>
    <article>
        <form action="/editeseuperfilpsic" method="post" enctype="multipart/form-data">
            <!-- Foto de perfil -->
            <section class="box-img">
                <label class="picture" for="profile_pic" tabindex="0">
                    <span class="picture__image">
                        <% if (valores.IMAGEM_PERFIL) { %>
                            <img src="<%= valores.IMAGEM_PERFIL %>" alt="Foto de perfil" class="profile-img">
                        <% } else { %>
                            Escolher foto
                        <% } %>
                    </span>
                </label>
                <input type="file" name="profile_pic" id="profile_pic" style="display: none;">
            </section>
        
            <!-- Campos de edição -->
            <section class="edit-info">
                <!-- Email -->
                <section class="info">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="emailpsic" value="<%= valores.email_psic %>" readonly>
                    <span class="edit-icon" onclick="enableEdit('email')">✏️</span>
                </section>
        
                <!-- Telefone -->
                <section class="tele">
                    <label for="tel">Telefone</label>
                    <input type="tel" id="tel" name="tel" value="<%= valores.num_psic %>" readonly>
                    <span class="edit-icon" onclick="enableEdit('tel')">✏️</span>
                </section>
            </section>
        
            <section class="ph2">
                <!-- Abordagem -->
                <section class="abordagemm">
                    <label for="abord">Abordagem</label>
                    <select name="abordagem" id="abord" disabled>
                        <option value="<%= valores.abordagem_psic %>" selected><%= valores.abordagem_psic %></option>
                        <option value="Psicologia Comportamental">Psicologia Comportamental</option>
                        <option value="Psicanálise">Psicanálise</option>
                        <!-- Outras opções -->
                    </select>
                    <span class="edit-icon" onclick="enableEdit('abord')">✏️</span>
                </section>
        
                <!-- Especialidade -->
                <section class="abordagemm">
                    <label for="esp">Especialidade</label>
                    <select name="especialidade" id="esp" disabled>
                        <option value="<%= valores.especialidade_psic %>" selected><%= valores.especialidade_psic %></option>
                        <option value="Terapia Cognitiva">Terapia Cognitiva</option>
                        <!-- Outras opções -->
                    </select>
                    <span class="edit-icon" onclick="enableEdit('esp')">✏️</span>
                </section>
            </section>
        
            <!-- Biografia -->
            <section class="bio">
                <label for="biog">Biografia</label>
                <textarea id="biog" name="biografiapsic" readonly maxlength="300"><%= valores.bio_psic %></textarea>
                <span class="edit-icon" onclick="enableEdit('biog')">✏️</span>
            </section>
        
            <!-- Botão Salvar -->
            <section>
                <input type="submit" class="submit" value="Salvar">
            </section>
        </form>
    </article>
    <script>
        function enableEdit(fieldId) {
    const field = document.getElementById(fieldId);
    if (field.tagName === 'INPUT' || field.tagName === 'TEXTAREA') {
        field.readOnly = false;
        field.style.backgroundColor = '#fff';
        field.focus();
    } else if (field.tagName === 'SELECT') {
        field.disabled = false;
        field.style.backgroundColor = '#fff';
    }
}
    </script>
</body>
</html>
